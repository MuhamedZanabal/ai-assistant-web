# npm configuration

# Save exact versions
save-exact=true

# Use node protocol for dependencies
# package-lock=false

# Default to npm registry
registry=https://registry.npmjs.org/

# Audit configuration
audit-level=high

# Enable legacy peer dependencies for compatibility
legacy-peer-deps=false

# Scripts run in package.json
ignore-scripts=false

# Generate package-lock.json
package-lock=true

# Progress bar
progress=true
